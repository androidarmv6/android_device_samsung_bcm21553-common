<mixer>
  <!-- These are the initial mixer settings -->
  <ctl name="Speaker Playback Volume" value="0" />
  <ctl name="Speaker Playback Switch" value="0" />
  <ctl name="Mic Capture Volume" value="0" />
  <ctl name="Mic Capture Switch" value="0" />
  <ctl name="Earpiece Playback Volume" value="0" />
  <ctl name="Earpiece Playback Switch" value="0" />
  <ctl name="Headset Playback Volume" value="0" />
  <ctl name="Headset Playback Switch" value="0" />
  <ctl name="BTHeadset Volume" value="0" />
  <ctl name="BTHeadset Switch" value="0" />
  <ctl name="PCM Playback Route" value="0" />

  <path name="speaker">
    <ctl name="Speaker Playback Switch" value="1" />
  </path>

  <path name="headphone">
    <ctl name="Earpiece Playback Switch" value="1" />
    <ctl name="Headset Playback Switch" value="1" />
  </path>

  <path name="main-mic-left">
    <ctl name="Mic Capture Switch" value="1" />
  </path>

  <path name="main-mic-top">
    <ctl name="Mic Capture Switch" value="1" />
  </path>

</mixer>
